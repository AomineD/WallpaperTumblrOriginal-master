<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/drawerStyle</item>
    </style>

    <style name="ToolbarNN" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="drawerStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="WallpaperTransition" parent="Theme.AppCompat.Light.NoActionBar"
        >
        <item name="android:windowEnterTransition">@transition/settransition</item>
<item name="android:windowActivityTransitions">true</item>
        <item name="drawerArrowStyle">@style/drawerStyle</item>

    </style>

</resources>
